{
  "name": "headline",
  "version": "0.0.1",
  "description": "Ascetic RSS reader in JavaScript, no server required",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "test": "eslint app.js rss.js rss_test.js && node --experimental-modules rss_test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zserge/headline.git"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  },
  "author": "Serge Zaitsev <zaitsev.serge@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zserge/headline/issues"
  },
  "homepage": "https://github.com/zserge/headline#readme",
  "devDependencies": {
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jsdoc": "^3.6.3",
    "jsdom": "^15.2.0",
    "node-fetch": "^2.6.0",
    "terser": "^4.4.0"
  }
}
